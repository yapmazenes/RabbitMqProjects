@model WordToPdf
@{
    ViewData["Title"] = "Word To Pdf";
}

<h1>Word To Pdf Converter</h1>

<h3>@ViewBag.Result</h3>

<div class="row">
    <div class="col-md-4">

        <form asp-action="WordToPdf" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WordFile"></label>
                <input asp-for="WordFile" class="form-control" />
                <span asp-validation-for="WordFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="Convert" value="Convert" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>